{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$defs": {
    "category": {
      "type": "object",
      "properties": {
        "category": {
          "type": "string"
        },
        "amount": {
          "oneOf": [
            { "type": "number" },
            { "type": "string", "enum": ["INHERITED"] }
          ]
        },
        "subcategories": {
          "type": "array",
          "items": { "$ref": "#/$defs/category" }
        }
      },
      "required": ["category", "amount"]
    }
  },
  "properties": {
    "income": {
      "type": "array",
      "items": { "$ref": "#/$defs/category" }
    },
    "expenses": {
      "type": "array",
      "items": { "$ref": "#/$defs/category" }
    }
  },
  "required": ["expenses"]
}
